<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/petProfileEdit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetProfile"
    android:background="#ececec">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="441dp"
                android:layout_height="890dp">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="608dp"
                    android:layout_height="524dp"
                    app:srcCompat="@drawable/bg"
                    tools:layout_editor_absoluteX="-107dp"
                    tools:layout_editor_absoluteY="-91dp" />

                <ImageButton
                    android:id="@+id/imageButtonBack"
                    android:layout_width="41dp"
                    android:layout_height="45dp"
                    app:srcCompat="@drawable/ic_launcher_foreground"
                    tools:layout_editor_absoluteX="33dp"
                    tools:layout_editor_absoluteY="45dp" />

                <EditText
                    android:id="@+id/editTextPetName"
                    android:layout_width="141dp"
                    android:layout_height="44dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Pet Name"
                    android:textColor="#ffffff"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="41dp" />

                <EditText
                    android:id="@+id/editTextPetAge"
                    android:layout_width="73dp"
                    android:layout_height="41dp"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Age"
                    android:textColor="#ffffff"
                    tools:layout_editor_absoluteX="272dp"
                    tools:layout_editor_absoluteY="44dp" />

                <EditText
                    android:id="@+id/editTextPetType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Type"
                    android:textColor="#ffffff"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="94dp" />

                <EditText
                    android:id="@+id/editTextPetBreed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Breed"
                    android:textColor="#ffffff"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="148dp" />

                <EditText
                    android:id="@+id/editTextText5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Gender"
                    android:textColor="#ffffff"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="201dp" />

                <EditText
                    android:id="@+id/editTextText6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="text"
                    android:text="Color"
                    android:textColor="#ffffff"
                    tools:layout_editor_absoluteX="116dp"
                    tools:layout_editor_absoluteY="255dp" />

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="358dp"
                    android:layout_height="148dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="80dp"
                    android:layout_marginEnd="60dp"
                    android:background="@drawable/white_card_bg"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextText5">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="146dp">

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Owner Details"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="116dp"
                            tools:layout_editor_absoluteY="25dp" />

                        <EditText
                            android:id="@+id/editTextOwnerName"
                            android:layout_width="155dp"
                            android:layout_height="36dp"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Name"
                            android:textSize="15sp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="81dp" />

                        <EditText
                            android:id="@+id/editTextOwnerNum"
                            android:layout_width="157dp"
                            android:layout_height="36dp"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Phone Number"
                            android:textSize="15sp"
                            tools:layout_editor_absoluteX="195dp"
                            tools:layout_editor_absoluteY="81dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="358dp"
                    android:layout_height="255dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/white_card_bg"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout"
                    tools:layout_editor_absoluteX="24dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView14"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Medical History"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="109dp"
                            tools:layout_editor_absoluteY="32dp" />

                        <EditText
                            android:id="@+id/editTextPetIllness"
                            android:layout_width="170dp"
                            android:layout_height="45dp"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Illness"
                            android:textSize="15sp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="71dp" />

                        <EditText
                            android:id="@+id/editTextDate"
                            android:layout_width="142dp"
                            android:layout_height="40dp"
                            android:ems="10"
                            android:inputType="date"
                            android:textSize="15sp"
                            tools:layout_editor_absoluteX="209dp"
                            tools:layout_editor_absoluteY="74dp" />

                        <View
                            android:id="@+id/view"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#818181"
                            tools:layout_editor_absoluteX="87dp"
                            tools:layout_editor_absoluteY="127dp" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Medications"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            tools:layout_editor_absoluteX="87dp"
                            tools:layout_editor_absoluteY="150dp" />

                        <EditText
                            android:id="@+id/editTextMedication"
                            android:layout_width="206dp"
                            android:layout_height="45dp"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Medicine | Dosage"
                            android:textSize="15sp"
                            tools:layout_editor_absoluteX="16dp"
                            tools:layout_editor_absoluteY="194dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/buttonSave"
                    android:layout_width="355dp"
                    android:layout_height="52dp"
                    android:background="#3F51B5"
                    android:text="Save"
                    app:cornerRadius="20dp"
                    tools:layout_editor_absoluteX="27dp"
                    tools:layout_editor_absoluteY="822dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>